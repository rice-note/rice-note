{
  "name": "rice-note-workspaces",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "platform/*",
    "core/*"
  ],
  "repository": "git@github.com:XinOuyangPersonalTeam/rice-note.git",
  "author": "<fex@0000o.net>",
  "license": "MIT",
  "devDependencies": {
    "stylelint": "^13.8.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "stylelint-scss": "^3.18.0",
    "eslint": "^6.5.1",
    "husky": "^4.3.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*{.ts,.js}": [
      "eslint --ext .tsx,.ts --fix ./",
      "prettier --write",
      "git add"
    ],
    "*{.styled.ts}": [
      "stylelint **/*.styled.ts",
      "git add"
    ]
  }
}
